Dashboard

{{!-- cars --}}

<div>
    <h1 class="text-3xl font-bold">My Cars</h1>
    
    <table class="table-auto">
        <thead>
            <th>Name</th>
            <th>Seats</th>
            <th>-</th>
        </thead>
        <tbody>
            {{#each cars}}
            <tr>
                <td>{{name}}</td>
                <td>{{seats}}</td>
                <td>
                    <form action="/cars/{{_id}}/delete" method="post">
                        <button class="rounded-xl p-2 px-3 text-white bg-rose-600" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}

            <form action="/cars/new" method="post">
                <tr>
                    <td>
                        <input class="p-2 border rounded" type="text" name="name" id="name" required>
                    </td>
                    <td>
                        <input class="p-2 border rounded" type="number" name="seats" id="seats" required>
                    </td>
                    <td>
                        <button class="rounded-xl p-2 px-3 text-white bg-blue-600" type="submit">Add</button>
                    </td>
                </tr>
            </form>
        </tbody>
    </table>
    
    <div>
        <h1>Your Events</h1>
        <div>
            {{#each events}}
            <div>
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <p>{{date}}</p>
                <a href="/events/{{_id}}/delete">Delete</a>
            </div>
            {{/each}}
        </div>
        <form action="/events/new" method="post">
            <div>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
            </div>
            <div>
                <label for="description">Description</label>
                <input type="text" name="description" id="description" required>
            </div>
            <div>
                <label for="date">Date</label>
                <input type="datetime-local" name="date" id="date" required>
            </div>
            <button type="submit">Create Event</button>
        </form>
    </div>

</div>