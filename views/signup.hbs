<div class="w-full self-center flex justify-center">
    
    <form action="/signup" method="post"
        class="flex flex-col gap-5 w-1/2 shadow-xl p-10 rounded-xl">
        
        <div>
            <h1 class="text-3xl font-bold">Sign up</h1>
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-light" for="username">Username</label>
            <input class="p-2 border rounded" type="text" name="username" id="username">
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-light" for="name">Name</label>
            <input class="p-2 border rounded" type="text" name="name" id="name">
        </div>

        <div class="flex flex-col gap-2">
            <label class="font-light" for="password">Password</label>
            <input class="p-2 border rounded" type="password" name="password" id="password">
        </div>

        <div class="flex flex-row gap-5 items-center">
            <button class="rounded-xl p-2 px-3 text-white bg-rose-600" type="submit">Sign up</button>
            <a class="text-rose-600" href="/login">Already have an account?</a>
        </div>
    </form>

</div>